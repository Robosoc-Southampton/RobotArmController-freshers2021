<UserControl x:Class="XBControllerViewer.View.IOBindingDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:XBControllerViewer.View"
             xmlns:model="clr-namespace:XBControllerViewer.Model"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=model:IOBindingModel}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid>
            <Label HorizontalAlignment="Left"
                   Content="{Binding Input}"/>
            <Label HorizontalAlignment="Center"
                   Content="→" FontWeight="SemiBold"/>
            <Label HorizontalAlignment="Right"
                   Content="{Binding Output}"/>
        </Grid>
    </Grid>
</UserControl>
